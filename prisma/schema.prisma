datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id           String  @id
    firstName    String
    lastName     String
    email        String
    hasImage     Boolean @default(false)
    imageUrl     String
    birthday     String
    username     String
    gender       String
    lastSignInAt BigInt

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Post {
    id   Int    @id @default(autoincrement())
    name String
    // content String

    // authorId  String
    // author
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([name])
}

